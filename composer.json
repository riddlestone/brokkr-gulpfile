{
    "name": "riddlestone/brokkr-gulpfile",
    "description": "A tool to create gulpfiles based on Laminas module configuration",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/riddlestone/brokkr-gulpfile",
    "type": "library",
    "extra": {
        "zf": {
            "component": "Riddlestone\\Brokkr\\Gulpfile"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "authors": [
        {
            "name": "Andrew Riddlestone",
            "email": "andrew.riddlestone@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Riddlestone\\Brokkr\\Gulpfile\\": "src/"
        }
    },
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "laminas/laminas-component-installer": "^2.0 || ^1.0 || ^0.7",
        "laminas/laminas-servicemanager": "^3.4",
        "riddlestone/brokkr-console": "^1.0.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Riddlestone\\Brokkr\\Gulpfile\\Test\\": "test/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    }
}
